<Window x:Class="WpfKlant.afpbeheren"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfKlant"
        mc:Ignorable="d"
        Title="KLANT - Afspraken beheren" Height="343" Width="382">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Mijn Afspraken" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <ListBox Grid.Row="1" SelectionChanged="lbAfspraken_SelectionChanged" x:Name="lbAfspraken" Margin="10,49,10,127"/>
        <Label Grid.Row="2" Content="Details" HorizontalAlignment="Left"  VerticalAlignment="Top" FontWeight="Bold" Margin="20,10,0,0"/>
        <Label Grid.Row="2" x:Name="lblDate" Content="" HorizontalAlignment="Left"  VerticalAlignment="Top" Margin="32,36,0,0"/>
        <Label Grid.Row="2" x:Name="lblKapper" Content="" HorizontalAlignment="Left"  VerticalAlignment="Top" Margin="34,65,0,0"/>
        <Button Grid.Row="2" Content="Annuleren" Click="btnAnnuleren_Click" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="26" Width="68" Margin="304,73,0,0"/>

    </Grid>
</Window>
