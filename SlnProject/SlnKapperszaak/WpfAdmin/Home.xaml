<Page x:Class="WpfAdmin.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfAdmin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Home">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="113*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="175*"/>
            <RowDefinition Height="113*"/>
        </Grid.RowDefinitions>
        <WrapPanel Grid.Row="2" Background="LightGray" x:Name="PanelKappers" />
        <ListBox Grid.Row="3" x:Name="lbKappers" Margin="0,0,0,67" />
        <Label Content="Filter op specialiteit: " HorizontalAlignment="Left" Margin="27,0,0,0" Grid.Row="1" VerticalAlignment="Center" FontSize="16"/>
        <ComboBox SelectionChanged="ComboBox_SelectionChanged" x:Name="cbFilters" HorizontalAlignment="Left" Margin="200,0,0,0" Grid.Row="1" VerticalAlignment="Center" Width="160"/>

    </Grid>
</Page>
