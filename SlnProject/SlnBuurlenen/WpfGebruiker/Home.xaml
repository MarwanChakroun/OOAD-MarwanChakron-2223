<Page x:Class="WpfGebruiker.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfGebruiker"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Home">

    <Grid>
        <Label Foreground="#0e387a" FontWeight="Bold" Content="Type:" Margin="0 0 10 0"/>
        <RadioButton Name="rbALl" GroupName="rb" Content="All" Margin="40 7 20 0" IsChecked="True"/>
        <RadioButton Name="rbMotor" GroupName="rb" Content="Gemotoriseerd" Margin="80 7 10 0"/>
        <RadioButton Name="rbtrok" GroupName="rb" Content="Getrokken" Margin="185 7 10 0"/>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <WrapPanel Name="pnlItems" Margin="10 50 10 10">
            </WrapPanel> 
        </ScrollViewer>
    </Grid>
</Page>
