<Page x:Class="WpfGebruiker.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfGebruiker"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Home">

    <Grid>
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0 0 40 0" Orientation="Horizontal">
            <Label Foreground="#0e387a" FontWeight="Bold" Content="Type:" Margin="0 0 10 0"/>
            <CheckBox Content="Gemotoriseerd" Margin="0 7 10 0" />
            <CheckBox Content="Getrokken" Margin="0 7 0 0" />
        </StackPanel>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <WrapPanel x:Name="pnlItems" Margin="30 10 10 10"></WrapPanel>
        </ScrollViewer>
    </Grid>
</Page>
