<Page x:Class="WpfGebruiker.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfGebruiker"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Home">

    <Grid>
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Orientation="Horizontal">
            <Label Foreground="#0e387a" FontWeight="Bold" Content="Type:" Margin="0 0 10 0"/>
            <CheckBox Name="chkMotor" Content="Gemotoriseerd" Margin="0 7 10 0" IsChecked="True" Checked="Checkfilter"/>
            <CheckBox Name="chktrok" Content="Getrokken" Margin="0 7 0 0" IsChecked="True" Checked="Checkfilter"/>
        </StackPanel>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <WrapPanel Name="pnlItems" Margin="10 50 10 10">
            </WrapPanel> 
        </ScrollViewer>
    </Grid>
</Page>
